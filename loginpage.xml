<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <Button
        android:id="@+id/warning"
        android:layout_width="223dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="521dp"
        android:backgroundTint="#E9FFE1E1"
        android:fontFamily="@font/poppins"
        android:outlineSpotShadowColor="#B53F3F"
        android:text="Nama tidak terdaftar!"
        android:textAllCaps="false"
        android:textColor="#FC000000" />

    <ImageView
        android:id="@+id/report"
        android:layout_width="38dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="289dp"
        android:layout_marginBottom="523dp"
        app:srcCompat="@drawable/warning" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="178dp"
        android:text="Login" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="594dp"
        android:fontFamily="@font/poppins"
        android:text="Welcome back!"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="145dp"
        android:text="Don't have account? Sign up here"
        android:textSize="14sp" />

    <Button
        android:id="@+id/email"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="389dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins"
        android:outlineSpotShadowColor="#3F51B5"
        android:text="Email"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#70000000"
        android:textStyle="italic" />

    <Button
        android:id="@+id/jurusan"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="337dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins"
        android:outlineSpotShadowColor="#3F51B5"
        android:text="Jurusan"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#70000000"
        android:textStyle="italic" />

    <Button
        android:id="@+id/semester"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="287dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins"
        android:outlineSpotShadowColor="#3F51B5"
        android:text="Semester"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#70000000"
        android:textStyle="italic" />

    <Button
        android:id="@+id/nama"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="437dp"
        android:backgroundTint="@color/white"
        android:outlineSpotShadowColor="#3F51B5"
        android:fontFamily="@font/poppins"
        android:text="Nama Lengkap"
        android:textAllCaps="false"
        android:textColor="#70000000"
        android:textStyle="italic" />




</RelativeLayout>

